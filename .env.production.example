# Production Environment Variables Template
# Copy this to .env.production and fill in the values

# Django Settings
SECRET_KEY=your-production-secret-key-here-make-it-very-long-and-random
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,.herokuapp.com,.railway.app,.onrender.com

# Database (Production PostgreSQL)
DB_NAME=roadhealth_db
DB_USER=your_db_user
DB_PASSWORD=your_strong_db_password
DB_HOST=your-db-host.com
DB_PORT=5432

# Email Configuration (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Redis (for Celery - optional but recommended)
REDIS_URL=redis://localhost:6379/0

# Google Maps API (Optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenAI API (Optional - for enhanced AI features)
OPENAI_API_KEY=your-openai-api-key

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Settings (if using separate frontend)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Storage (AWS S3 - Optional for media files)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Sentry (Error Tracking - Optional)
SENTRY_DSN=your-sentry-dsn-url

# Static Files CDN (Optional)
STATIC_URL=https://cdn.yourdomain.com/static/
MEDIA_URL=https://cdn.yourdomain.com/media/
